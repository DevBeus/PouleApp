<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.pouleapp">

    <application
        android:name="com.example.pouleapp.Data.GlobalData"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Activities.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".Activities.TournamentActivity"
            android:windowSoftInputMode="adjustNothing">
        </activity>
        <activity android:name=".Activities.PouleActivity"></activity>
        <activity android:name=".Activities.EditTeamActivity"></activity>
        <activity android:name=".Activities.EditMatchActivity"></activity>
        <activity android:name=".Activities.SchemeTableActivity"></activity>
        <activity android:name=".Activities.SchemeActivity"></activity>
        <activity android:name=".Activities.RankingActivity"></activity>
    </application>

</manifest>