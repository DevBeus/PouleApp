<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id = "@+id/relativeLayout1"
    android:layout_width = "fill_parent"
    android:layout_height = "wrap_content">
    <!--android:background = "@color/colorCell" >-->

    <TextView
        android:id = "@+id/ranking"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/rank"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/team"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "3"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/team"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/matches"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/matches"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/points"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/points"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/matches_won"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/matches_won"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/matches_draw"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/matches_draw"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/matches_lost"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/matches_lost"
        android:maxLines="1" />





    <TextView
        android:id = "@+id/goals_for"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/goals_for"
        android:maxLines="1" />

    <TextView
        android:id = "@+id/goals_against"
        android:layout_width = "0dp"
        android:layout_height = "match_parent"
        android:layout_weight = "1"
        android:background = "@drawable/cell_shape"
        android:ellipsize = "end"
        android:padding = "5dp"
        android:text = "@string/goals_against"
        android:maxLines="1" />
</LinearLayout>