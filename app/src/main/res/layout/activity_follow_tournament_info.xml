<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.example.pouleapp.activities.FollowTournamentInfoActivity">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/follow_tournament_info_vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.29" />

    <TextView
        android:id="@+id/follow_tournament_info_text_view_tournament_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="@string/tournament_settings_text_view_tournament_name"
        app:layout_constraintBaseline_toBaselineOf="@+id/follow_tournament_info_text_view_tournament_name_show"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/follow_tournament_info_text_view_tournament_name_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/follow_tournament_info_vertical_guideline"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/follow_tournament_info_text_view_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tournament_settings_text_view_location"
        app:layout_constraintBaseline_toBaselineOf="@+id/follow_tournament_info_text_view_location_show"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/follow_tournament_info_text_view_location_show"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/follow_tournament_info_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/follow_tournament_info_text_view_tournament_name_show" />


    <TextView
        android:id="@+id/follow_tournament_info_text_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="@string/tournament_settings_text_view_date"
        app:layout_constraintBaseline_toBaselineOf="@+id/follow_tournament_info_text_view_date_show"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/follow_tournament_info_text_view_date_show"
        android:layout_width="wrap_content"
        android:layout_height="19dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/follow_tournament_info_vertical_guideline"
        app:layout_constraintTop_toBottomOf="@+id/follow_tournament_info_text_view_location_show" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/follow_tournament_info_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <ListView
        android:id="@+id/follow_tournament_info_list_view_poules"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/follow_tournament_info_guideline" />


</androidx.constraintlayout.widget.ConstraintLayout>
